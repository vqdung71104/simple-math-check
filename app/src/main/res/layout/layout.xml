<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- EditText để nhập số thay vì TextView -->
    <EditText
        android:id="@+id/etNumberRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_marginBottom="16dp"
        android:inputType="number"
        android:maxLines="1"
        android:hint="Nhập số"
        android:background="@android:color/transparent"
        android:textColorHint="@android:color/darker_gray" />

    <!-- Horizontal Layout cho hàng tab đầu tiên -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnOdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Số lẻ"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnPrime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Số nguyên tố"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnPerfect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Số hoàn hảo"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Horizontal Layout cho hàng tab thứ hai -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnEven"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Số chẵn"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnSquare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Số chính phương"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnFibonacci"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Số Fibonacci"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- ListView để hiển thị danh sách số -->
    <ListView
        android:id="@+id/listViewNumbers"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>